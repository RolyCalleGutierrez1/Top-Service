@model IEnumerable<PR_Top_Service_MVC.Models.Profesional>

@{
    ViewData["Title"] = "Index";
}

<h1>Profesionales</h1>


<table class="table">
    <thead>
        <tr>
            <th>
                Servicio;
            </th>
            <th>
               Fecha de Nacimiento;
            </th>
            
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Ocupation)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Birthdate)
            </td>
          
            <td>
                <a asp-controller="Service" asp-action="Create" asp-route-id="@item.IdProfesional">Nuevo Servicio</a>
            </td>
        </tr>
}
    </tbody>
</table>
