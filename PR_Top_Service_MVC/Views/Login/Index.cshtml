@model PR_Top_Service_MVC.Models.User
@{
}

<br />

<div class="alert alert-dismissible alert-danger" @ViewData["alert"]>
    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    <strong>Failed to verify your identity</strong> please check your credentials or register <a asp-action="Register" class="alert-link">HERE</a>
</div>

<div class="tab-pane fade show active" id="login" role="tabpanel" aria-labelledby="login-tab">
    <h2 class="text-center mt-4 mb-4 font-weight-bold" style="text-transform: uppercase;">Login</h2>
    <form asp-action="Index">
        <div class="form-row">
            <div class="form-group col-md-12">
                <label>Email</label>
                <input type="email" class="form-control" placeholder="Write your email address"
                       required="" asp-for="Email">
            </div>
            <div class="form-group col-md-12">
                <label>Password</label>
                <input type="password" class="form-control" placeholder="Enter your password"
                       required="" asp-for="Password">
            </div>

            @*<div class="form-group col-md-12">
            <div class="d-flex flex-wrap justify-content-between align-items-center">
            <a asp-controller="Login" asp-action="Register">¿Are you not registered yet?</a>
            </div>
            </div>*@
        </div>
        <div class="mt-2 mb-3">
            <button class="btn btn-primary full-width" type="submit">Login</button>
        </div>
    </form>
</div>
